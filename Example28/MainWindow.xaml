<Window x:Class="Example28.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example28"
        mc:Ignorable="d"
        
        Title="Example 28" 
        Height="500" 
        Width="1000"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <!--Outer Grid-->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Account Pane-->
        <Grid Margin="0 0 5 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            
            <Label Content="Accounts" FontWeight="Bold"/>
            <DataGrid Grid.Row="1"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0 0 5 0" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="0 5 5 0">
                <Label Content="Account Number"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5 5 0 0">
                <Label Content="Account Type"/>
                <ComboBox>
                    <ComboBoxItem Content="Checking"/>
                    <ComboBoxItem Content="Savings"/>
                    <ComboBoxItem Content="Investment"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="0 5 5 0" Grid.Row="1">
                <Label Content="First Name"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Margin="5 5 0 0" Grid.Row="1" Grid.Column="1">
                <Label Content="Last Name"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Margin="0 5 5 0" Grid.Row="2">
                <Label Content="Date of Birth"/>
                <DatePicker/>
            </StackPanel>

            <StackPanel Margin="5 5 0 0" Grid.Row="2" Grid.Column="1">
                <Label Content="Street and Number"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Margin="0 5 5 0" Grid.Row="3" Grid.Column="0">
                <Label Content="Complement"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Margin="5 5 0 0" Grid.Row="3" Grid.Column="1">
                <Label Content="City"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Margin="0 5 5 0" Grid.Row="4" Grid.Column="0">
                <Label Content="Province"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Margin="5 5 0 0" Grid.Row="4" Grid.Column="1">
                <Label Content="Postal Code"/>
                <TextBox/>
            </StackPanel>

            <Button Content="Create" Margin="0 5 5 0" Grid.Row="5"/>
            <Button Content="Reset" Margin="5 5 0 0" Grid.Row="5" Grid.Column="1"/>
        </Grid>

        <!--Transaction Pane-->
        <Grid Grid.Column="1" Margin="5 0 0 0" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="11*"/>
            </Grid.RowDefinitions>

            <Label Content="Transactions" FontWeight="Bold"/>
            <DataGrid Grid.Row="1"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1" Margin="5 0 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="0 5 5 0">
                <Label Content="Value (CAD)"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5 5 0 0">
                <Label Content="Transaction Type"/>
                <ComboBox>
                    <ComboBoxItem Content="Debit"/>
                    <ComboBoxItem Content="Credit"/>
                </ComboBox>
            </StackPanel>

            <Button Content="Create" Margin="0 5 5 0" Grid.Row="5"/>
            <Button Content="Reset" Margin="5 5 0 0" Grid.Row="5" Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>